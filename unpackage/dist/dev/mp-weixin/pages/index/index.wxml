<view class="page"><swiper class="carousel" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}"><block wx:for="{{carouselList}}" wx:for-item="carousel" wx:for-index="index" wx:key="index"><swiper-item><image class="carousel" src="{{carousel.image}}"></image></swiper-item></block></swiper><view class="page-block super-hot"><view class="hot-title-wrapper"><image class="hot-ico" src="../../static/icos/hot.png"></image><view class="hot-title">热门超英</view></view></view><scroll-view class="page-block hot" scroll-x="true"><block wx:for="{{hotList}}" wx:for-item="poster" wx:for-index="index" wx:key="index"><view class="single-poster"><view class="poster-wrapper" data-trailerId="{{poster.id}}" data-event-opts="{{[['tap',[['showTrailer',['$event']]]]]}}" bindtap="__e"><image class="poster" src="{{poster.cover}}"></image><view class="movie-name">{{''+poster.name+''}}</view><trailer-stars vue-id="{{'1-'+index}}" showNum="1" innerScore="{{poster.score}}" bind:__l="__l"></trailer-stars></view></view></block></scroll-view><view class="page-block super-hot"><view class="hot-title-wrapper"><image class="hot-ico" src="../../static/icos/interest.png"></image><view class="hot-title">热门预告</view></view></view><view class="page-block hot-video"><block wx:for="{{trailerList}}" wx:for-item="trailer" wx:for-index="index" wx:key="index"><video class="hot-movie-single" src="{{trailer.trailer}}" poster="{{trailer.poster}}"></video></block></view><view class="page-block super-hot"><view class="hot-title-wrapper"><image class="hot-ico" src="../../static/icos/guess-u-like.png"></image><view class="hot-title">猜你喜欢</view></view></view><view class="page-block guess-u-like"><block wx:for="{{guessULikeList}}" wx:for-item="guess" wx:for-index="index" wx:key="index"><view class="single-like-movie"><image class="like-movie" src="{{guess.cover}}" data-trailerId="{{guess.id}}" data-event-opts="{{[['tap',[['showTrailer',['$event']]]]]}}" bindtap="__e"></image><view class="movie-desc" data-trailerId="{{guess.id}}" data-event-opts="{{[['tap',[['showTrailer',['$event']]]]]}}" bindtap="__e"><view class="movie-title">{{''+guess.name+''}}</view><trailer-stars vue-id="{{'2-'+index}}" innerScore="{{7.1}}" showNum="0" bind:__l="__l"></trailer-stars><view class="movie-info">{{''+guess.basicInfo+''}}</view><view class="movie-info">{{''+guess.releaseDate+''}}</view></view><view class="movie-oper" data-index="{{index}}" data-event-opts="{{[['tap',[['praiseMe',['$event']]]]]}}" bindtap="__e"><image class="praise-ico" src="../../static/icos/praise.png"></image><view class="praise-me">点赞</view><view class="praise-me animation-opacity" animation="{{animationDataArr[index]}}">+1</view></view></view></block></view></view>